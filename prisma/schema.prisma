generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Intent {
  CREDIT
  DEBIT
  UNDO
}

enum Status {
  PENDING
  CONFIRMED
  FAILED
}

model User {
  id          String   @id @default(cuid())
  email       String?  @unique
  phoneNumber String?  @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  transactions Transaction[]
  contacts     Contact[]
  logs         ParseLog[]

  // NextAuth
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Early Access
  isEarlyAdopter Boolean @default(true)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Contact {
  id   String @id @default(cuid())
  name String

  // Contacts are private to a user
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Relations
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ensure a user doesn't have two contacts named "Raju"
  @@unique([userId, name])
}

model Transaction {
  id          String  @id @default(cuid())
  amount      Decimal @db.Decimal(10, 2)
  currency    String  @default("INR")
  intent      Intent
  description String?
  category    String  @default("General")

  date DateTime @default(now())

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id])

  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])

  // Link back to the raw parsed log
  parseLogId String?   @unique
  parseLog   ParseLog? @relation(fields: [parseLogId], references: [id])

  // Link to the confirmation message sent to the user (for reply handling)
  confirmationMessageId String? @unique

  // Soft Delete
  isDeleted       Boolean   @default(false)
  deletedAt       DateTime?
  deletedByUserId String?

  @@index([userId, date])
}

model ParseLog {
  id      String @id @default(cuid())
  rawText String
  parsed  Json

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  transaction Transaction?

  createdAt DateTime @default(now())
}

model ProcessedMessage {
  id          String   @id @default(cuid())
  messageId   String   @unique
  processedAt DateTime @default(now())
}

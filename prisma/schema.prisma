generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Intent {
  CREDIT
  DEBIT
}

enum Status {
  PENDING
  CONFIRMED
  FAILED
}

model User {
  id          String   @id @default(cuid())
  email       String?  @unique
  phoneNumber String   @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  transactions Transaction[]
  contacts     Contact[]
  logs         ParseLog[]
}

model Contact {
  id   String @id @default(cuid())
  name String

  // Contacts are private to a user
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Relations
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ensure a user doesn't have two contacts named "Raju"
  @@unique([userId, name])
}

model Transaction {
  id          String  @id @default(cuid())
  amount      Decimal @db.Decimal(10, 2)
  currency    String  @default("INR")
  intent      Intent
  description String?
  category    String  @default("General")

  date DateTime @default(now())

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id])

  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])

  // Link back to the raw parsed log
  parseLogId String?   @unique
  parseLog   ParseLog? @relation(fields: [parseLogId], references: [id])

  @@index([userId, date])
}

model ParseLog {
  id      String @id @default(cuid())
  rawText String
  parsed  Json

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  transaction Transaction?

  createdAt DateTime @default(now())
}

model ProcessedMessage {
  id          String   @id @default(cuid())
  messageId   String   @unique
  processedAt DateTime @default(now())
}
